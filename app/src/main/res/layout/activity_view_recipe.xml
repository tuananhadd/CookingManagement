<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewRecipeActivity">
    <Button
        android:id="@+id/btnReturnToRecipeList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Back to Recipe List"
        android:onClick="onClickReturnToRecipeList" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnReturnToRecipeList">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/recipeNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipe Name"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_marginBottom="18dp"/>

            <TextView
                android:id="@+id/courseTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="28dp"/>

            <TextView
                android:id="@+id/ingredientsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="28dp"/>

            <TextView
                android:id="@+id/weightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="18dp"/>

            <TextView
                android:id="@+id/cookingTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cooking Time"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="18dp"/>

            <TextView
                android:id="@+id/instructionLinkTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instruction Link"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="18dp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
